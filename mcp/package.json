{
  "name": "@iyulab/u-widgets-mcp",
  "version": "0.1.0",
  "description": "MCP server for the u-widgets declarative widget system",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "u-widgets-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "inspect": "npx @modelcontextprotocol/inspector dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "widgets",
    "ai",
    "u-widgets"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iyulab/u-widgets",
    "directory": "mcp"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@iyulab/u-widgets": "^0.4.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "~5.7.0",
    "vitest": "^3.0.0"
  }
}
