{
  "name": "u-widgets",
  "version": "0.1.0",
  "description": "Declarative, data-driven widget system for visualization and input",
  "type": "module",
  "module": "./dist/u-widgets.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/u-widgets.js"
    },
    "./charts": {
      "types": "./dist/charts.d.ts",
      "import": "./dist/u-widgets-charts.js"
    },
    "./forms": {
      "types": "./dist/forms.d.ts",
      "import": "./dist/u-widgets-forms.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "schema"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:demo": "vite build --config vite.demo.config.ts",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "widgets",
    "web-components",
    "lit",
    "data-driven",
    "declarative",
    "visualization",
    "chart",
    "form"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iyulab/u-widgets"
  },
  "dependencies": {
    "lit": "^3.2.0"
  },
  "peerDependencies": {
    "echarts": "^5.5.0 || ^6.0.0",
    "@formdown/core": "^0.4.0"
  },
  "peerDependenciesMeta": {
    "echarts": {
      "optional": true
    },
    "@formdown/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "happy-dom": "^15.0.0",
    "typescript": "~5.7.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^3.0.0"
  }
}
